@model IEnumerable<Employee>
@{
    Layout = "_MainView";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="/js/site.js"></script>
</head>
<body>
    <table class="table">
        <h1> Employees </h1>

        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                @* <th scope="col">Email</th> *@
                <th scope="col">Type</th>
                @*  <th scope="col">Mobile</th>
                <th scope="col">Branch</th>
                <th scope="col">Hire Date</th> *@

            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3">No Employees found</td>
                </tr>
            }
            else
            {
                foreach (var Employee in Model)
                {
                    <tr>
                        <td>@Employee.Id</td>
                        <td>@Employee.Name</td>
                        @* <td>@Employee.Email</td> *@
                        <td>@Employee.Type</td>
                        @* 
                            <td>@Employee.Mobile</td>
                <td>@Employee.Branch.Name</td>
                <td>@Employee.HireDate</td> *@
                        <td><a asp-action="Edit" asp-controller="Employee" asp-route-id="@Employee.Id" class="btn btn-primary">Edit</a></td>
                        <td><a asp-action="showDetails" asp-controller="Employee" asp-route-id="@Employee.Id" class="btn btn-primary">Details</a></td>
                        <td>
                            <a onclick="confirmDelete(@Employee.Id)" class="btn btn-primary">Delete</a>
                        </td>


                    </tr>
                }
            }
        </tbody>
    </table>
    <div><a asp-action="Create" asp-controller="Employee" class="btn btn-danger"> Create new Employee </a></div>
    <script>
        function confirmDelete(instructorId) {
            if (confirm("Are you sure you want to delete this instructor?")) {
                // If user confirms, redirect to delete action
                window.location.href = '/Instructor/Delete/' + instructorId;
            }
        }
    </script>
</body>


</html>

