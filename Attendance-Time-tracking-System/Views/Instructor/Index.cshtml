@model IEnumerable<Instructor>
@{
    Layout = "_MainView";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="/js/site.js"></script>
</head>
<body>
    <table class="table">
        <h1>Instructors </h1>
        
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">Branch Id</th>
                <th scope="col">Hire Date</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6">No Instructors found</td>
                }
                </tr>
            }else
            {
                foreach (var Instructor in Model)
                {
                 <tr>
                     <td>@Instructor.Id</td>
                    <td>@Instructor.Name</td>
                    <td>@Instructor.Email</td>
                    <td>@Instructor.Mobile</td>
                    <td>@Instructor.BranchId</td>
                    <td>@Instructor.HireDate</td>
                    <td><a asp-action="Edit" asp-controller="Instructor" asp-route-id="@Instructor.Id" class="btn btn-primary">Edit</a></td>
                    <td><a asp-action="showDetails" asp-controller="Instructor" asp-route-id="@Instructor.Id" class="btn btn-primary">Details</a></td>
                        <td>
                            <a onclick="confirmDelete(@Instructor.Id)" class="btn btn-primary">Delete</a>
                        </td>


                 </tr>
                }
            }
        </tbody>
    </table>
    <div><a asp-action="Create" asp-controller="Instructor" class="btn btn-danger"> Create new Instructor </a></div>
    <script>
        function confirmDelete(instructorId) {
            if (confirm("Are you sure you want to delete this instructor?")) {
                // If user confirms, redirect to delete action
                window.location.href = '/Instructor/Delete/' + instructorId;
            }
        }
    </script>
</body>


</html>
