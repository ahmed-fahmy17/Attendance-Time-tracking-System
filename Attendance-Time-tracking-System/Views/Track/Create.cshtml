@model Track
@{
    Layout = "_MainView";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<body>
    <form asp-action="Create" method="post" class="m-5">

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProgramID" class="control-label"></label>
            <select asp-for="ProgramID" class="form-control">
                <option value="">select ProgramID </option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>
            <span asp-validation-for="ProgramID" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
        <br />
        <div>
            <a asp-action="Index" class="btn btn-primary">Back to Track List</a>
        </div>
    </form>
</body>
</html>
