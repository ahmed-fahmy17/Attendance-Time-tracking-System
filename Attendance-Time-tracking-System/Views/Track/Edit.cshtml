@model Track
@{
    Layout = "_MainView";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


</head>
<style>
    .form-group input[type="checkbox"].form-control {
        /* Override any conflicting styles here */
        /* For example: */
        width: auto; /* Set width to auto */
    }
</style>

<body>
    <form method="post" class="m-5">

        <div class="form-group ">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProgramID" class="control-label"></label>
            <select asp-for="ProgramID" class="form-control">
                <option value="">Select Program</option>
                @foreach (var program in ViewBag.programs)
                {
                    <option value="@program.Id">@program.Name</option>
                }
            </select>
            <span asp-validation-for="ProgramID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsDeleted" class="control-label"></label>
            <input asp-for="IsDeleted" type="checkbox"  />
            <span asp-validation-for="IsDeleted" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">
                <img width="30" height="30" src="~/images/upcr.png" alt="Update" /> Update
            </button>
        </div>
        <br />

    </form>
</body>
</html>