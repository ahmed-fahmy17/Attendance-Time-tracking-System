@model IEnumerable<Track>
@{
    Layout = "_MainView";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="/js/site.js"></script>
</head>
<body>
    <table class="table">
        <h1> Tracks </h1>

        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Program</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3">No Instructors found</td>
                    }
                </tr>
            }
            else
            {
                foreach (var Track in Model)
                {
                    <tr>
                        <td>@Track.Id</td>
                        <td>@Track.Name</td>
                        <td>@Track.ProgramType.Name</td>

                        <td><a asp-action="Edit" asp-controller="Track" asp-route-id="@Track.Id" class="btn btn-danger">Edit</a></td>
                        <td><a asp-action="showDetails" asp-controller="Track" asp-route-id="@Track.Id" class="btn btn-danger">Details</a></td>
                        <td>
                            <a onclick="confirmDelete(@Track.Id)" class="btn btn-danger">Delete</a>
                        </td>


                    </tr>
                }
            }
        </tbody>
    </table>
    <div><a asp-action="Create" asp-controller="Track" class="btn btn-danger"> Create new Track </a></div>
    <script>
        function confirmDelete(TrackId) {
            if (confirm("Are you sure you want to delete this track?")) {
                // If user confirms, redirect to delete action
                window.location.href = '/Track/Delete/' + TrackId;
            }
        }
    </script>
</body>


</html>
