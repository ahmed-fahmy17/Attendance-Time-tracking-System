@model User
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Role Profile</h1>

<div class="card"> 
    <div class="card-body">
        <form method="post" asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Password" class="font-weight-bold">Password:</label>
                <input type="password" class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Mobile" class="font-weight-bold">Mobile:</label>
                <input type="tel" class="form-control" asp-for="Mobile" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Save Changes</button>
            <button class="btn btn-primary"><a href="/user/profile/@Model.Id" style="color:white;  text-decoration:none;">Back</a></button>
        </form>
    </div>
</div>
