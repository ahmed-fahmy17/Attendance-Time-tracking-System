@model User
@{
    ViewData["Title"] = "Profile";
}

<h1>@Model.Role Profile</h1>

<style>
    .header-image {
        text-align: center;
    }
</style>

<div class="header-image">
    <img src="~/images/profile.jpg" alt="Profile Image" style="height: 150px; width:150px; border-radius:50%;" />
</div>

<a href="/User/Edit/@Model.Id" class="btn btn-primary mb-3">Edit Profile</a>
<table class="table table-bordered text-center">
    <tr>
        <td>Id</td>
        <td>@Model.Id</td>
    </tr>

    <tr>
        <td>Name</td>
        <td>@Model.Name</td> 
    </tr>

    <tr>
        <td>Email</td>
        <td>@Model.Email</td>
    </tr>

    <tr>
        <td>Password</td>
        <td>@Model.Password</td>
    </tr>

    <tr>
        <td>Mobile</td>
        <td>@Model.Mobile</td>
    </tr>

    <tr>
        <td>Role</td>
        <td>@Model.Role</td>
    </tr>

    <tr>
        <td>Branch</td>
        <td>@Model.Branch.Name</td>
    </tr>


</table>